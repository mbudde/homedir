# -*- indent-tabs-mode: t -*-
# vim: set noexpandtab:
[user]
	name = Michael Budde
	email = mbudde@gmail.com
[core]
	excludesfile = ~/.gitignore
[alias]
	st = status -sb
	di = diff
	dic = diff --cached
	wdi = diff --color-words
	co = checkout
	ci = commit
	br = branch
	h = help
	rb = rebase
	ri = rebase --interactive
	rt = remote
	pr = pull --rebase
	lg = log --stat --relative-date
	fa = !sh -c 'git add $@ $(git -c color.status=always status --short | grep -v \"^[D ][D ]\" | fzf --ansi --multi | cut -c4-)' -
	g = log --graph --oneline --decorate
	graph = log --graph --oneline --all --decorate
	graph-two = !git log --graph --oneline --decorate --date-order $1 ${2:-HEAD} ^$(git merge-base $1 ${2:-HEAD})^
	incoming = !git log --graph --oneline --decorate --date-order --format='%C(yellow)%h %Creset%s %Cblue[%ar] %C(cyan)%ae %Cgreen%d' origin/master HEAD ^$(git merge-base origin/master HEAD)^
	linc = log ..origin/master
	pusht = !git push && git push --tags
	ppp = !git push || git pull && git push
	pprp = !git push || git pr && git push
	fixup = !sh -c 'git commit --fixup=$(git find-commit) $@' -
	squash = !sh -c 'git commit --squash=$(git find-commit) $@' -
	serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	me = log --oneline --decorate --graph --date-order --format='%C(yellow)%h %Cblue%ci %Creset%s %Cblue[%ar] %Cgreen%d' --author='Michael Budde' master
	vimgrep = "!f() { vim $(git grep -l \"$@\"); }; f"
	conflicts = diff --name-only --diff-filter=U
	land = "!f() { arc land --merge --hold \"$@\" && git checkout master && git merge --ff-only HEAD@{1}; }; f"
[diff]
	renames = copies
[push]
	default = upstream
[rebase]
	autosquash = true
[fetch]
	prune = true
[color]
	ui = auto
[color "diff"]
	meta = yellow
[color "grep"]
	filename = magenta
[gui]
	fontui = -family \"Bitstream Vera Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Ubuntu Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	encoding = utf-8
	commitmsgwidth = 72
	wmstate = normal
	geometry = 1366x712+0+24 290 301
[url "git://git.gnome.org/"]
	insteadOf = gnome:
[url "git@github.com:"]
	insteadOf = github:
[github]
	user = mbudde
