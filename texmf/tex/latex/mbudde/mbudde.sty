\newcommand\mb@createoption[2][]%
    {\newtoggle{mb@opt#2}
     \DeclareOption{#2}{\toggletrue{mb@opt#2}}
     \ifthenelse{\equal{#1}{}}%
       {\DeclareOption{no#2}{\togglefalse{mb@opt#2}}}%
       {\DeclareOption{#1}{\togglefalse{mb@opt#2}}}}

\newcommand\mb@getoption[1]{mb@opt#1}

